@model IEnumerable<BO.Samourai>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des combattants inscrits au Dojo</h2>

<p>
    @Html.ActionLink("Ajouter un nouveau combattant", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Force)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Arme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtMartiaux)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Force)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nom)
    </td>
    <td>
        @if (item.Arme == null)
        {
            @ViewBag.Message

        }
        @if (item.Arme != null)
        {
            @Html.DisplayFor(modelItem => item.Arme.Nom)
        }
    </td>
    <td>
        @if (item.ArtMartiaux == null || item.ArtMartiaux.Count == 0)
        {
            @ViewBag.Message2
        }
        else
        {
            foreach (var artmartial in item.ArtMartiaux)
            {
                @Html.DisplayFor(modelItem => artmartial.Nom) <br />
            }
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
